html
    box-sizing border-box
    font-size (16*0.6)px
    height 100%

    @media (min-width (2035*0.7)px)
        font-size (16*0.7)px

    @media (min-width (2035*0.8)px)
        font-size (16*0.8)px

    @media (min-width (2035*0.9)px)
        font-size (16*0.9)px

    @media (min-width 2035px)
        font-size 16px

*, *:before, *:after
    box-sizing inherit

body
    min-width 320px
    font-family Futuris, arial, verdana, sans-serif
    font-size-f(24)
    font-weight 400
    font-style normal
    line-height normal
    color $white
    display flex
    flex-direction column
    height 100%

    .main
        flex 1 0 auto

    .footer
        flex 0 0 auto

.container
    position relative
    max-width 2055px
    padding-left 10px
    padding-right 10px
    margin-left auto
    margin-right auto

p
    margin-top 0
    margin-bottom 10px

    &:last-child
        margin-bottom 0
