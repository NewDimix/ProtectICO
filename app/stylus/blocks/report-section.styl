.report-section
    background-color $steel-blue
    padding-top-f(65)
    padding-bottom-f(30)

    &__explanations-wrap
        font-size 0
        margin-top-f(50)

    &__explanation
        position relative
        margin-bottom-f(30)

        @media(min-width 768px)
            {ibm}
            width 31.33%
            margin-right 3%
            margin-bottom 0

        &:last-child
            margin-right 0

    &__color
        position absolute
        top 50%
        transform translateY(-50%)
        width-f(42)
        height-f(42)
        border-radius 50%

        &_green
            background-color $green

        &_blue
            background-color $bay-of-many

        &_red
            background-color $alizarin-crimson

    &__text
        {ibm}
        font-size-f(25)
        font-weight 400
        padding-left-f(80)
