.area-section-page
    font-size 0
    text-align center

    &__logo
        margin-bottom-f(30)

        @media (min-width 1100px)
            {ibm}
            margin-right-f(110)
            margin-bottom 0

        .logo
            &__img
                width-f(170)
                height auto

                @media (min-width 480px)
                    width-f(250)

            &__text
                font-size-f(70)

    &__progress
        {ibm}
        margin-bottom-f(80)

    &__text-block
        max-width-f(1800)
        margin-left auto
        margin-right auto

    &__steps
        font-size 0
        margin-bottom-f(42)
        background-color rgba(255, 255, 255, 0.4)

        span
            {ibt}
            width 19.2%
            font-size-f(46)
            margin-right 1%
            font-weight 700

            &:first-child
                background-color $turbo

            &:nth-child(2)
                background-color $tango

            &:nth-child(3)
                background-color $pomegranate

            &:nth-child(4)
                background-color $alizarin-crimson

            &:last-child
                margin-right 0
                background-color $bright-red

    &__text
        font-size-f(33)
        text-align justify

        p
            margin-bottom 0

        a
            color $white

        iframe, img
            display block
            margin-left auto
            margin-right auto
            max-width 100%
            margin-top-f(20)
            margin-bottom-f(20)
