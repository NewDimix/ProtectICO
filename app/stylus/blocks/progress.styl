.progress
    font-size 0
    background-color rgba(38, 75, 138, 0.8)
    padding-top-f(40)
    padding-bottom-f(40)
    padding-left-f(45)
    padding-right-f(45)

    &__text
        &_big
            font-size-f(47/1.2)
            text-transform uppercase

            @media (min-width 768px)
                font-size-f(47)

        &_medium
            font-size-f(42/1.2)
            text-transform uppercase

            @media (min-width 768px)
                font-size-f(42)

        &_small
            font-size-f(33/1.2)

            @media (min-width 768px)
                font-size-f(33)

        &_grey
            color $gray

        &_red
            color $alizarin-crimson

    &__sum
        text-align center
        padding-top-f(25)
        padding-bottom-f(25)
        padding-left-f(50)
        padding-right-f(50)
        border 3px solid rgba(255, 255, 255, 0.5)
        margin-bottom-f(25)

        br
            @media (min-width 640px)
                display none


    &__date
        font-size-f(58/1.2)
        margin-bottom-f(25)

        @media (min-width 768px)
            font-size-f(58)

    &__timer
        font-size-f(58/1.2)
        margin-top-f(25)
        margin-bottom-f(55)

        @media (min-width 768px)
            font-size-f(58)

        br
            @media (min-width 640px)
                display none

    &__quantity-block
        border 3px solid $alizarin-crimson
        padding-top-f(12/1.2)
        padding-bottom-f(12/1.2)
        margin-bottom-f(20)

        @media (min-width 640px)
            {ibm}
            width 60%
            margin-right 3%
            margin-bottom 0

        @media (min-width 768px)
            padding-top-f(12)
            padding-bottom-f(12)

    &__quantity-text
        font-size-f(27)
        text-align center
        text-transform uppercase
        margin-bottom-f(5)

        @media (min-width 380px)
            {ibm}
            font-size-f(27/1.2)
            text-align right
            margin-right-f(28)
            margin-bottom 0

        @media (min-width 768px)
            font-size-f(27)

    &__quantity-count
        {ibm}
        font-size-f(71/1.2)
        font-weight 700

        @media (min-width 768px)
            font-size-f(71)

    &__btn
        {ibm}
        width auto

        @media (min-width 640px)
            width 37%

        a
            width 100%
            padding-left-f(15)
            padding-right-f(15)

    &__social
        margin-top-f(50)
        margin-bottom-f(20)

        .social
            li
                margin-right-f(6)

                &:last-child
                    margin-right 0

        br
            @media (min-width 400px)
                display none !important
