.text-block
    font-size-f(24)

    &__img
        width-f(224)
        height-f(238)
        background-image url(../img/footer-img.jpg)
        background-position center
        background-size contain
        background-repeat no-repeat
        float left
        margin-right-f(28)

    &__title
        text-transform uppercase
        margin-bottom-f(37)

    &__text
        margin-bottom-f(26)
        line-height 1.3

    &__btn
        text-align center

        @media(min-width 480px)
            text-align left

        @media(min-width 992px)
            text-align center
