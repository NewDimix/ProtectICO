.panel
    position relative

    &:after
        content ''
        width-f(17)
        height-f(17)
        background inline('key-icon.svg')
        background-size contain
        position absolute
        left-f(-30)
        top 60%
        transform translateY(-50%)

    &__signin-wrap
        {ibm}
        padding-right-f(20)
        border-right 2px solid rgba(255, 255, 255, 0.6)

    &__signup-wrap
        {ibm}
        padding-left-f(20)

    &__signin, &__signup
        font-size-f(25)
        color $white
        text-decoration none
        position relative

        &:after
            content ''
            position absolute
            bottom 0
            left 0
            width 100%
            height 1px
            background-color rgba(255, 255, 255, 0.5)

        &:hover, &:focus
            outline none

            &:after
                background-color $white
