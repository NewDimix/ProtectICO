.main
    position relative
    font-size-f(20)

    &__bg-dark
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        background-color rgba(0, 0, 0, .65)

    &_padding
        padding-top-f(27)
        padding-bottom-f(27)

    &__particles
        position absolute
        width 100%
        top 0
        bottom 0
        background-color #0a1119
        background-image url(../img/scam-bg.jpg)
        background-repeat no-repeat
        background-size cover
        background-position 50% 50%
        z-index 1

    canvas
        display block
        vertical-align bottom
