.project
    position relative
    z-index 2

    &__header
        font-size 0

    &__name
        {ibm}
        width 50%
        text-align left

    &__logo
        {ibm}
        width-f(68)
        height-f(68)
        margin-right-f(20)
        background inline('youcoin-icon.png')
        background-position center
        background-repeat no-repeat
        background-size contain

    &__logo-text
        {ibm}
        margin-top 0
        margin-bottom 0
        text-transform uppercase
        font-weight 400
        font-size-f(24)

    &__exchange
        {ibm}
        width 50%
        text-align right
        text-transform uppercase
        font-size-f(28)
        font-weight 700

    &__title
        {ibm}
        width 50%
        text-align right
        text-transform uppercase

        h2
            font-size-f(28)
            font-weight 400
            margin-top 0
            margin-bottom 0

    &__text
        font-size-f(24)
        text-align left
        overflow hidden
        position relative
        margin-left -10px
        padding-left 10px

        .mCustomScrollBox
            margin-left -5px
            padding-left 5px
            border-left 2px solid transparent

        .mCSB_scrollTools
            width 5px

    &__progress
        font-size 0

    &__line
        background-color $white
        margin-bottom-f(12)

    &__scale
        background-color $alizarin-crimson
        width 50%
        height-f(16)

    &__collected
        {ibt}
        width 50%
        font-size-f(20)
        text-align left

    &__hardcap
        {ibt}
        width 50%
        font-size-f(20)
        text-align right

    &__steps
        font-size 0

        span
            {ibt}
            width 19.2%
            font-size-f(46)
            margin-right 1%

            &:last-child
                margin-right 0

    &__quantity-block
        border 3px solid $tango
        padding-top-f(12/1.2)
        padding-bottom-f(12/1.2)

        @media (min-width 768px)
            padding-top-f(12)
            padding-bottom-f(12)

    &__quantity-text
        {ibm}
        font-size-f(25/1.2)
        text-align right
        text-transform uppercase
        margin-right-f(28)
        color $tango

        @media (min-width 768px)
            font-size-f(25)

    &__quantity-count
        {ibm}
        font-size-f(60/1.2)
        font-weight 700

        @media (min-width 768px)
            font-size-f(60)

    &_transparent
        background-color rgba(73, 128, 188, 0.6)

    &_white
        background-color $white

        .project
            &__text
                color $black

        .mCSB_draggerRail
            background-color #d0d0d0 !important

        .mCSB_dragger_bar
            background-color $steel-blue !important

    &_red
        background-color rgba(157, 6, 10, .8)

    &_blue
        background-color $steel-blue

    &_default
        padding-top-f(30/1.5)
        padding-left-f(40/1.5)
        padding-right-f(40/1.5)
        height-f(460)

        @media (min-width 1170px)
            padding-top-f(30)
            padding-left-f(40)
            padding-right-f(40)

        .project
            &__header
                margin-bottom-f(35)

            &__name
                border-right 2px solid $white

                @media (min-width 1420px)
                    border-width 4px

            &__text
                height-f(225)
                margin-bottom-f(20)

                .mCustomScrollBox
                    &:focus
                        border-color rgba(255, 255, 255, 0.5)

    &_report
        padding-top-f(32)
        padding-left-f(21)
        padding-right-f(21)
        height-f(465)

        .project
            &__header
                margin-bottom-f(35)

            &__logoICO
                img
                    margin-right-f(20)

            &__steps
                margin-bottom-f(42)

                span
                    &:first-child
                        background-color $green

                    &:nth-child(2)
                        background-color $bay-of-many

                    &:nth-child(3)
                        background-color $alizarin-crimson

                    &:nth-child(4)
                        background-color $alizarin-crimson

                    &:last-child
                        background-color $alizarin-crimson

            &__text
                height-f(130)
                text-align center

                .mCustomScrollBox
                    &:focus
                        border-color rgba(0, 100, 147, 0.5)

    &_ongoing
        padding-top-f(30/1.5)
        padding-left-f(40/1.5)
        padding-right-f(40/1.5)
        height-f(460)

        @media (min-width 1170px)
            padding-top-f(30)
            padding-left-f(40)
            padding-right-f(40)

        .project
            &__header
                margin-bottom-f(35)

            &__text
                height-f(175)
                margin-bottom-f(25)

                .mCustomScrollBox
                    &:focus
                        border-color rgba(255, 255, 255, 0.5)

    &_implementation
        padding-top-f(30/1.5)
        padding-left-f(40/1.5)
        padding-right-f(40/1.5)
        height-f(445)

        @media (min-width 1170px)
            padding-top-f(30)
            padding-left-f(40)
            padding-right-f(40)

        .project
            &__header
                margin-bottom-f(50)

            &__text
                height-f(180)
                margin-bottom-f(45)

                .mCustomScrollBox
                    &:focus
                        border-color rgba(255, 255, 255, 0.5)

            &__steps
                span
                    &:first-child
                        background-color $green

                    &:nth-child(2)
                        background-color $tango

                    &:nth-child(3)
                        background-color $pomegranate

                    &:nth-child(4)
                        background-color $alizarin-crimson

                    &:last-child
                        background-color $milano-red


    &_scam
        padding-top-f(30/1.5)
        padding-left-f(40/1.5)
        padding-right-f(40/1.5)
        height-f(460)

        @media (min-width 1170px)
            padding-top-f(30)
            padding-left-f(40)
            padding-right-f(40)

        .project
            &__header
                margin-bottom-f(40)

            &__logo
                width-f(68*1.5)
                height-f(68*1.5)
                margin-right-f(20*1.5)

            &__logo-text
                font-size-f(24*1.5)

            &__name
                width auto

            &__text
                height-f(250)

                .mCustomScrollBox
                    &:focus
                        border-color rgba(255, 255, 255, 0.5)


