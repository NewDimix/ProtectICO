.account-section-page
    position relative
    padding-top-f(133)
    padding-bottom-f(167)

    &__menu
        position absolute
        width-f(350)
        left 0
        top-f(133)
        transition box-shadow .5s ease

        ul
            padding-left 0
            margin-top 0
            margin-bottom 0

            li
                margin-bottom-f(75)

                &:last-child
                    margin-bottom 0

            a
                color $black
                font-size-f(28)
                font-family Scada

    &__content
        margin-left-f(350)
        min-height-f(780)
